<!-- COCKTAIL SHOW PAGE -->
<div class="container">
  <div class="card">
    <h2><%= @cocktail.name %></h2>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= "#{dose.description} of #{dose.ingredient.name}" %>
          <p id="sweet-alert-demo">🗑</p>
          <%= link_to "", dose_path(dose), method: :delete, class: "delete-link"%></li>
      <% end %>
    </ul>
  </div>
  <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "🏚", cocktails_path %>
</div>